<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title </title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="~/Content/Site.css" rel="stylesheet" />

</head>
<body>

    <div class="container">       
        <div class="row" >          
            <nav class="navbar navbar-default navbar-fixed-top" role="navigation" style="background-color:#242424; height:85px;">
                <div class="row" style="height:15px;"></div>
                <div class="container">
                <div class="row">
                    <div class="col-md-10">
                        <span class="siteTitle" style=" margin-right:10px; height:30px; float:left; ">
                            <a href="/Home/Index"><img style="height:50px; z-index:99999999!important;" class="img-responsive" src="~/Images/LifeInEsbjergLogo2.png" /> </a>
                        </span>
                        <div style="margin-top:18px;" class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                            <ul class="nav navbar-nav">
                                <li class="">@Html.ActionLink("Home", "Index", "Home")</li>
                                <li> @Html.ActionLink("Companies ", "Index", "Company",routeValues: new { id = 1 },htmlAttributes: null)</li>
                                <li> @Html.ActionLink("About Us", "About", "Home")</li>
                                <li> @Html.ActionLink("Contact", "Contact", "Home")</li>
                                @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
                                {
                                    <li role="presentation" class="dropdown">
                                        <a class="dropdown-toggle" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">
                                            Administration <span class="caret"></span>
                                        </a>
                                        <ul class="dropdown-menu">
                                            <li> @Html.ActionLink("Create Company ", "Create", "Company")</li>
                                            <li> @Html.ActionLink("Edit Company ", "Edit", "Company")</li>
                                            <li>Ratings</li>
                                            <li role="separator" class="divider"></li>
                                            <li> @Html.ActionLink("Add Ratings ", "AddRating", "Company")</li>
                                            <li>Review</li>
                                            <li role="separator" class="divider"></li>
                                            <li> @Html.ActionLink("Add Review ", "AddReview", "Company")</li>
                                        </ul>
                                    </li>
                                }
                            </ul>

                            <ul class="nav navbar-nav navbar-right">
                                <li style="margin-top:10px; margin-bottom:-10px;">

                                </li>
                                <li>@Html.Partial("_LoginPartial")</li>

                            </ul>

                        </div><!-- /.navbar-collapse -->
                    </div>
                    <div class="col-md-2" style="margin-top:16px;">
                        @using (Html.BeginForm("Index", "Company", FormMethod.Get))
                        {

                            <div style="width:220px; padding-right:100px;">
                                <div class="input-group">
                                    @Html.TextBox("SearchString", null, new {@class = "searchbox" })
                                    <span class="input-group-btn">
                                        <button class="btn btn-default" type="button">Go!</button>
                                    </span>
                                </div><!-- /input-group -->
                            </div><!-- /.col-lg-6 -->
                        }
                    </div>                  
                </div>
               
                    <!-- Brand and toggle get grouped for better mobile display -->
                    <div class="navbar-header">
                        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="‪#‎bs‬-example-navbar-collapse-1">
                            <span class="sr-only">Toggle navigation</span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>

                    </div>

                    <!-- Collect the nav links, forms, and other content for toggling -->
             
               

                </div><!-- /.container-fluid -->
            </nav>
        </div>
    </div>
 
    <div class="row" style="height:55px;"></div>
    <div class="@*container body-content*@ ">
        @RenderBody()
      
    </div>
    <footer style="margin-bottom:0!important;">
        <div class="row footerTop">
            <div class="container">
                <div class="col-md-4">
                    <h3 style="color:#428bca;">Mission</h3>
                   <p>
                       Our mission is to improve the community in Esbjerg city and to give everybody an equal chance to make a difference.
                   </p>
                </div>
                <div class="col-md-4">
                    <h3 style="color:#428bca;">Our Town</h3>
                    <img class="img-responsive" src="http://psg-foto.dk/gallery3/var/resizes/Fotos-fra-forskellige-steder-i-Danmark/De_Hvide_Maend.jpg?m=1350443200" />
                <br />
                </div>
                <div class="col-md-4">
                    <h3 style="color:#428bca;">Vision</h3>
                   <p>                     
                      Our vision is to bring people and companies together, so both of them will be part of the “Life in Esbjerg”, and to create a friendly competition between companies.

                   </p>
                </div>
            </div>
        </div>
        <div class="row footerBot">
            <div class="container" style="margin-top:40px; margin-bottom:20px;">
                <p>&copy; @DateTime.Now.Year - Esbjerg Kommune</p>
            </div>
       
        </div>        
    </footer>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
