@model IEnumerable<DtoModel.Company>
<div class="row">
    @foreach (var item in Model.Take(3))
    {

        <div class="col-sm-6 col-md-4">
            <div class="thumbnail">
                <img class="img-responsive" src="@item.ImageUrl" style="height:160px!important" />

                <div class="caption" style="min-height:150px;">
                    <h3>@item.Name</h3>
                    <p>@item.Description</p>
                    <br />
                    <div class="progress" style="width:200px; margin-bottom:-6px;">
                        <div class="progress-bar progress-bar-success" role="progressbar" aria-valuenow=@item.overall aria-valuemin="0" aria-valuemax="100" style="width: @item.overall.ToString(".")%">
                            Overal Rating @(item.AvgOvr)
                        </div>
                    </div>
                </div>
                <hr />
                <p><a href="#" class="btn btn-primary" role="button">Details</a></p> <div style="float:right; margin-top:-76px;"><span class="label label-info">@item.Category.Name</span></div>

            </div>
        </div>

    }
</div>
<br />
